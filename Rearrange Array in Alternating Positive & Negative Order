#include <stdio.h>

void rearrange(int arr[], int n) {
    int pos[100], neg[100];
    int p = 0, ne = 0;

    for (int i = 0; i < n; i++) {
        if (arr[i] >= 0)
            pos[p++] = arr[i];
        else
            neg[ne++] = arr[i];
    }

    int i = 0, j = 0, k = 0;

    while (i < p && j < ne) {
        arr[k++] = pos[i++];
        arr[k++] = neg[j++];
    }

    while (i < p)
        arr[k++] = pos[i++];

    while (j < ne)
        arr[k++] = neg[j++];
}

int main() {
    int arr[] = {1, 2, -3, -4, 5, -6};
    int n = sizeof(arr) / sizeof(arr[0]);

    rearrange(arr, n);

    for (int i = 0; i < n; i++)
        printf("%d ", arr[i]);

    return 0;
}
