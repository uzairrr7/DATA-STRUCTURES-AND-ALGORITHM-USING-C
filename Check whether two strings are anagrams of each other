#include <stdio.h>
#include <stdbool.h>
#include <string.h>

#define ALPHA_SIZE 256  // assuming extended ASCII

bool areAnagrams(const char *s1, const char *s2) {
    int count[ALPHA_SIZE] = {0};
    int i;

    // if lengths differ, they can't be anagrams
    if (strlen(s1) != strlen(s2)) {
        return false;
    }

    // count chars in s1
    for (i = 0; s1[i] != '\0'; i++) {
        count[(unsigned char)s1[i]]++;
    }
    // subtract counts for s2
    for (i = 0; s2[i] != '\0'; i++) {
        count[(unsigned char)s2[i]]--;
        if (count[(unsigned char)s2[i]] < 0) {
            return false;
        }
    }
    // all counts should now be zero
    for (i = 0; i < ALPHA_SIZE; i++) {
        if (count[i] != 0) {
            return false;
        }
    }
    return true;
}

int main() {
    char s1[] = "listen";
    char s2[] = "silent";
    char s3[] = "hello";
    printf("\"%s\" & \"%s\" -> %s\n", s1, s2, areAnagrams(s1, s2) ? "true" : "false");
    printf("\"%s\" & \"%s\" -> %s\n", s1, s3, areAnagrams(s1, s3) ? "true" : "false");
    return 0;
}
