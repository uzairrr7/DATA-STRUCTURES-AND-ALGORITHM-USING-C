#include <stdio.h>
#include <stdlib.h>

typedef struct {
    int id, deadline, profit;
} Job;

int cmpProfit(const void *a, const void *b) {
    Job *A = (Job*)a;
    Job *B = (Job*)b;
    return B->profit - A->profit;
}

int maxProfit(Job jobs[], int n) {
    qsort(jobs, n, sizeof(Job), cmpProfit);
    int maxDeadline = 0;
    for (int i = 0; i < n; i++) {
        if (jobs[i].deadline > maxDeadline)
            maxDeadline = jobs[i].deadline;
    }
    int *slot = (int*)malloc((maxDeadline+1) * sizeof(int));
    for (int i = 0; i <= maxDeadline; i++) slot[i] = -1;

    int totalProfit = 0;
    for (int i = 0; i < n; i++) {
        for (int j = jobs[i].deadline; j > 0; j--) {
            if (slot[j] == -1) {
                slot[j] = i;  // assign job i to slot j
                totalProfit += jobs[i].profit;
                break;
            }
        }
    }
    free(slot);
    return totalProfit;
}

int main() {
    Job jobs[] = { {1, 2, 100}, {2, 1, 19}, {3, 2, 27}, {4, 1, 25}, {5, 3, 15} };
    int n = sizeof(jobs)/sizeof(jobs[0]);
    printf("Maximum profit = %d\n", maxProfit(jobs, n));
    return 0;
}
