#include <stdio.h>
#include <stdbool.h>

#define SIZE 1000

bool areArraysEqual(int a[], int b[], int n, int m) {
    if(n != m) return false;

    int hash[SIZE] = {0};

    for(int i = 0; i < n; i++)
        hash[a[i]]++;

    for(int i = 0; i < m; i++) {
        if(hash[b[i]] == 0)
            return false;
        hash[b[i]]--;
    }

    return true;
}

int main() {
    int a[] = {1, 2, 3};
    int b[] = {3, 2, 1};

    if(areArraysEqual(a, b, 3, 3))
        printf("Arrays are equal\n");
    else
        printf("Arrays are NOT equal\n");
}
