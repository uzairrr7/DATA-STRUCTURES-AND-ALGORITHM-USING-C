#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    int arr[n];
    long long prefix[n];

    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Build prefix sum
    prefix[0] = arr[0];
    for (int i = 1; i < n; i++) {
        prefix[i] = prefix[i - 1] + arr[i];
    }

    long long totalSum = prefix[n - 1];
    int equilibriumIndex = -1;

    for (int i = 0; i < n; i++) {
        long long leftSum  = prefix[i] - arr[i];
        long long rightSum = totalSum - prefix[i];

        if (leftSum == rightSum) {
            equilibriumIndex = i;
            break;
        }
    }

    printf("%d\n", equilibriumIndex);

    return 0;
}
