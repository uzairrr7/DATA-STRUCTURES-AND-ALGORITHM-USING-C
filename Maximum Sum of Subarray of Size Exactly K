int maxSumSubarraySizeK(int arr[], int n, int K) {
    int window_sum = 0;
    for (int i = 0; i < K; i++) window_sum += arr[i];
    int max_sum = window_sum;
    for (int i = K; i < n; i++) {
        window_sum += arr[i] - arr[i - K];
        if (window_sum > max_sum) max_sum = window_sum;
    }
    return max_sum;
}
