#include <stdio.h>
void bubble(int a[], int n){
    for(int i=0;i<n-1;i++){
        int swapped = 0;
        for(int j=0;j<n-1-i;j++){
            if(a[j] > a[j+1]){
                int t=a[j]; a[j]=a[j+1]; a[j+1]=t;
                swapped = 1;
            }
        }
        if(!swapped) break;
    }
}
int main(){
    int a[] = {5,1,4,2,8}, n=5;
    bubble(a,n);
    for(int i=0;i<n;i++) printf("%d ", a[i]); // 1 2 4 5 8
    printf("\n");
    return 0;
}
