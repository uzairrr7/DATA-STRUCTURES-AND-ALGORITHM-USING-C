#include <stdio.h>
#include <stdlib.h>
#include <limits.h>

#define MAX 100

typedef struct {
    int arr[MAX];
    int front;
    int rear;
    int size;
} Deque;

void initDeque(Deque *dq) {
    dq->front = -1;
    dq->rear = -1;
    dq->size = MAX;
}

int isFull(Deque *dq) {
    return ((dq->front == 0 && dq->rear == dq->size - 1) ||
            (dq->front == dq->rear + 1));
}

int isEmpty(Deque *dq) {
    return (dq->front == -1);
}

void insertFront(Deque *dq, int x) {
    if (isFull(dq)) {
        printf("Deque is full\n");
        return;
    }
    if (dq->front == -1) { // empty
        dq->front = dq->rear = 0;
    } else if (dq->front == 0) {
        dq->front = dq->size - 1;
    } else {
        dq->front--;
    }
    dq->arr[dq->front] = x;
}

void insertRear(Deque *dq, int x) {
    if (isFull(dq)) {
        printf("Deque is full\n");
        return;
    }
    if (dq->front == -1) { // empty
        dq->front = dq->rear = 0;
    } else if (dq->rear == dq->size - 1) {
        dq->rear = 0;
    } else {
        dq->rear++;
    }
    dq->arr[dq->rear] = x;
}

void deleteFront(Deque *dq) {
    if (isEmpty(dq)) {
        printf("Deque is empty\n");
        return;
    }
    if (dq->front == dq->rear) {
        dq->front = dq->rear = -1;
    } else if (dq->front == dq->size - 1) {
        dq->front = 0;
    } else {
        dq->front++;
    }
}

void deleteRear(Deque *dq) {
    if (isEmpty(dq)) {
        printf("Deque is empty\n");
        return;
    }
    if (dq->front == dq->rear) {
        dq->front = dq->rear = -1;
    } else if (dq->rear == 0) {
        dq->rear = dq->size - 1;
    } else {
        dq->rear--;
    }
}

int getFront(Deque *dq) {
    if (isEmpty(dq)) {
        printf("Deque is empty\n");
        return INT_MIN;
    }
    return dq->arr[dq->front];
}

int getRear(Deque *dq) {
    if (isEmpty(dq)) {
        printf("Deque is empty\n");
        return INT_MIN;
    }
    return dq->arr[dq->rear];
}

int main() {
    Deque dq;
    initDeque(&dq);

    insertRear(&dq, 10);
    insertRear(&dq, 20);
    insertFront(&dq, 5);

    printf("Front = %d\n", getFront(&dq)); // 5
    printf("Rear = %d\n", getRear(&dq));   // 20

    deleteFront(&dq);
    printf("Front after deleteFront = %d\n", getFront(&dq)); // 10

    deleteRear(&dq);
    printf("Rear after deleteRear = %d\n", getRear(&dq)); // 10

    return 0;
}
