// 7. Online Stock Span - Jane Street, Two Sigma
class StockSpanner {
    stack<pair<int,int>> st; // price, span
public:
    int next(int price) {
        int span = 1;
        while (!st.empty() && st.top().first <= price) {
            span += st.top().second;
            st.pop();
        }
        st.push({price, span});
        return span;
    }
};
