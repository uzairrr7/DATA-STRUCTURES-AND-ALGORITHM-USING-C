#include <stdio.h>
#include <stdlib.h>

typedef struct Node { int val; struct Node* next; } Node;

int hasCycle(Node* head) {
    Node *slow = head, *fast = head;
    while (fast && fast->next) {
        slow = slow->next;
        fast = fast->next->next;
        if (slow == fast) return 1;
    }
    return 0;
}

/* helper to create list and demonstrate */
Node* newNode(int v){ Node* n=malloc(sizeof(Node)); n->val=v; n->next=NULL; return n; }

int main(){
    Node* a=newNode(1); Node* b=newNode(2); Node* c=newNode(3);
    a->next=b; b->next=c; c->next=b; // cycle
    printf("%d\n", hasCycle(a)); // 1
    return 0;
}
