#include <stdio.h>
#include <stdlib.h>
#define MAXV 50

int adj[MAXV][MAXV], V;
int visited[MAXV];

int dfs_cycle(int u, int parent) {
    visited[u] = 1;
    for(int v=0; v<V; v++) {
        if(adj[u][v]) {
            if(!visited[v]) {
                if(dfs_cycle(v, u))
                    return 1;
            } else if(v != parent) {
                return 1;
            }
        }
    }
    return 0;
}

int has_cycle() {
    for(int i=0;i<V;i++) visited[i]=0;
    for(int u=0; u<V; u++) {
        if(!visited[u]) {
            if(dfs_cycle(u, -1))
                return 1;
        }
    }
    return 0;
}

int main() {
    V = 4;
    // initialize
    for(int i=0;i<V;i++) for(int j=0;j<V;j++) adj[i][j]=0;
    add_edge(0,1);
    add_edge(1,2);
    add_edge(2,0);  // this introduces a cycle
    if(has_cycle())
       printf("Graph has cycle\n");
    else
       printf("Graph has no cycle\n");
    return 0;
}

void add_edge(int u, int v) {
    adj[u][v] = 1;
    adj[v][u] = 1;
}
