/* circular_queue.c
   Circular queue with fixed capacity
   Compile: gcc circular_queue.c -o circular_queue
*/
#include <stdio.h>
#include <stdlib.h>

#define CAP 5

typedef struct {
    int arr[CAP];
    int front; // index of front element
    int rear;  // index of rear element
    int count; // number of elements
} CircularQueue;

void initCQ(CircularQueue *q) {
    q->front = 0;
    q->rear = -1;
    q->count = 0;
}

int isFull(CircularQueue *q) { return q->count == CAP; }
int isEmpty(CircularQueue *q) { return q->count == 0; }

void enqueue(CircularQueue *q, int val) {
    if (isFull(q)) {
        printf("Circular Queue is full. Cannot enqueue %d\n", val);
        return;
    }
    q->rear = (q->rear + 1) % CAP;
    q->arr[q->rear] = val;
    q->count++;
}

int dequeue(CircularQueue *q) {
    if (isEmpty(q)) {
        printf("Circular Queue is empty. Cannot dequeue.\n");
        return -1;
    }
    int val = q->arr[q->front];
    q->front = (q->front + 1) % CAP;
    q->count--;
    return val;
}

void display(CircularQueue *q) {
    if (isEmpty(q)) {
        printf("Circular Queue is empty\n");
        return;
    }
    printf("Circular Queue: ");
    int idx = q->front;
    for (int i = 0; i < q->count; ++i) {
        printf("%d ", q->arr[idx]);
        idx = (idx + 1) % CAP;
    }
    printf("\n");
}

int main() {
    CircularQueue q;
    initCQ(&q);

    enqueue(&q, 1);
    enqueue(&q, 2);
    enqueue(&q, 3);
    enqueue(&q, 4);
    enqueue(&q, 5); // will be full at CAP
    display(&q);

    printf("Dequeue -> %d\n", dequeue(&q));
    printf("Dequeue -> %d\n", dequeue(&q));
    display(&q);

    enqueue(&q, 6);
    enqueue(&q, 7);
    display(&q);

    return 0;
}
